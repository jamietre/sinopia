{
	"extends": ["eslint:recommended"],	
	"parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
	"env": {
		"node": true,
		"es6": true
	},
	"rules": {
		"handle-callback-err": 2,
		"no-debugger": 2,
		"no-fallthrough": 2,
		"eol-last": 1,
		"no-irregular-whitespace": 1,
		"no-mixed-spaces-and-tabs": [
			1,
			"smart-tabs"
		],
		"no-trailing-spaces": 0,
		"no-new-require": 2,
		"no-undef": 2,
		"no-unreachable": 2,
		"no-unused-vars": [
			1,
			{
				"vars": "all",
				"args": "none"
			}
		]
	}
}

